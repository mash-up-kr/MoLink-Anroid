<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="19dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/ivItemChildFolderHead"
            android:src="@drawable/drawable_folder_head"
            android:layout_width="22.5dp"
            android:layout_height="7dp"
            android:layout_marginStart="8.3dp"
            android:layout_marginTop="1.8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
            android:src="@drawable/drawable_folder_head_border"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@+id/ivItemChildFolderHead"
            app:layout_constraintBottom_toBottomOf="@+id/ivItemChildFolderHead"
            app:layout_constraintStart_toStartOf="@+id/ivItemChildFolderHead"
            app:layout_constraintEnd_toEndOf="@+id/ivItemChildFolderHead"/>

    <ImageView
            android:id="@+id/ivItemChildFolder"
            android:src="@drawable/img_folder"
            android:layout_width="42dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/tvItemChildFolderTitle"
            android:textColor="@color/black"
            android:textSize="11dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:maxLines="2"
            app:layout_constraintStart_toEndOf="@+id/ivItemChildFolder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="title"/>

</androidx.constraintlayout.widget.ConstraintLayout>