<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".register.RegisterActivity"
        android:background="@color/white_gray">

    <androidx.appcompat.widget.AppCompatImageView android:layout_width="130dp" android:layout_height="130dp"
                                                  android:id="@+id/imgView_userImg"
                                                  android:src="@drawable/user_image"
                                                  android:layout_marginTop="71dp"
                                                  app:layout_constraintTop_toTopOf="parent"
                                                  app:layout_constraintStart_toStartOf="parent"
                                                  android:layout_marginStart="0dp"
                                                  app:layout_constraintEnd_toEndOf="parent"
                                                  android:layout_marginEnd="0dp"/>

    <ImageButton
            android:id="@+id/btnGallery"
            android:background="@drawable/gallery_btn"
            android:layout_width="55dp" android:layout_height="55dp"
            app:layout_constraintEnd_toEndOf="@+id/imgView_userImg" android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp" app:layout_constraintBottom_toBottomOf="@+id/imgView_userImg"/>

    <!--ID 입력-->
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/tvID"
              android:text="ID"
              android:textColor="@color/black"
              android:textSize="17dp" android:layout_marginTop="15dp"
              app:layout_constraintTop_toBottomOf="@+id/imgView_userImg" android:layout_marginStart="47dp"
              app:layout_constraintStart_toStartOf="parent"/>

    <EditText android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true"
              android:maxLines="1"
              android:id="@+id/etID"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="7dp"
              android:layout_marginEnd="47dp"
              app:layout_constraintStart_toStartOf="@+id/tvID" app:layout_constraintTop_toBottomOf="@+id/tvID"/>

    <!--Password 입력-->
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/tvPassword"
              android:text="Password"
              android:textColor="@color/black"
              android:textSize="17dp" android:layout_marginTop="15dp"
              app:layout_constraintTop_toBottomOf="@+id/etID" android:layout_marginStart="47dp"
              app:layout_constraintStart_toStartOf="parent"/>

    <EditText android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true"
              android:maxLines="1"
              android:id="@+id/etPassword"
              android:inputType="textPassword"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="7dp"
              android:layout_marginEnd="47dp"
              app:layout_constraintStart_toStartOf="@+id/tvPassword" app:layout_constraintTop_toBottomOf="@+id/tvPassword"/>

    <!--Password 확인-->
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/tvPasswordCheck"
              android:text="Password"
              android:textColor="@color/black"
              android:textSize="17dp" android:layout_marginTop="15dp"
              app:layout_constraintTop_toBottomOf="@+id/etPassword" android:layout_marginStart="47dp"
              app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/tvPasswordValidation"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintStart_toEndOf="@+id/tvPasswordCheck"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/etPassword"
            android:layout_marginTop="15dp"/>

    <EditText android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true"
              android:maxLines="1"
              android:id="@+id/etPasswordCheck"
              android:inputType="textPassword"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="7dp"
              android:layout_marginEnd="47dp"
              app:layout_constraintStart_toStartOf="@+id/tvPasswordCheck" app:layout_constraintTop_toBottomOf="@+id/tvPasswordCheck"/>


    <!--User Name 입력-->
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/tvUserName"
              android:text="User Name"
              android:textColor="@color/black"
              android:textSize="17dp" android:layout_marginTop="15dp"
              app:layout_constraintTop_toBottomOf="@+id/etPasswordCheck" android:layout_marginStart="47dp"
              app:layout_constraintStart_toStartOf="parent"/>

    <EditText android:layout_width="0dp" android:layout_height="wrap_content" android:singleLine="true"
              android:maxLines="1"
              android:id="@+id/etUserName"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="7dp"
              android:layout_marginEnd="47dp"
              app:layout_constraintStart_toStartOf="@+id/tvUserName" app:layout_constraintTop_toBottomOf="@+id/tvUserName"/>

    <!--회원가입 버튼-->
    <Button android:layout_width="200dp" android:layout_height="70dp"
              android:id="@+id/btnSignUp"
              android:background="@drawable/login_box"
              android:layout_marginTop="30dp"
              app:layout_constraintTop_toBottomOf="@+id/etUserName" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="0dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="0dp"
              android:text="Sign Up"
              android:textAllCaps="false"
              android:textSize="18dp"
              android:textColor="@color/white"
              android:gravity="center"
    />

</androidx.constraintlayout.widget.ConstraintLayout>