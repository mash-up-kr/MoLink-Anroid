<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/ivItemDetailFolderHead"
                android:src="@drawable/drawable_folder_head"
                android:layout_marginStart="16.6dp"
                android:layout_marginTop="3.6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
                android:src="@drawable/drawable_folder_head_border"
                android:layout_marginStart="16.6dp"
                android:layout_marginTop="3.6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
                android:id="@+id/ivItemDetailFolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_folder"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
                android:id="@+id/tvItemDetailFolderTitle"
                android:textSize="11dp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9.7dp"
                app:layout_constraintTop_toBottomOf="@+id/ivItemDetailFolder"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="title"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</RelativeLayout>