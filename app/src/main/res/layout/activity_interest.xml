<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:id="@+id/tvActivityInterestTitle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Choose your Interesting!"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_marginTop="86dp"
            android:layout_marginLeft="45dp"
    />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvActivityInterest"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tvActivityInterestTitle"
            android:layout_above="@+id/btnActivityInterestOk"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="32dp"
    />

    <Button
            android:id="@+id/btnActivityInterestOk"
            android:layout_alignParentBottom="true"
            android:layout_width="288dp"
            android:layout_height="46dp"
            android:textColor="@color/white"
            android:background="@color/cardview_shadow_start_color"
            android:text="폴더 생성하기"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="31dp"
            android:enabled="false"
    />



</RelativeLayout>